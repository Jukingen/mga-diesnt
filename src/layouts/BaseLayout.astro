---
interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image = '/images/og-image.jpg' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <div class="flex flex-col min-h-screen">
      <header>
        <slot name="header">
          <div class="bg-white shadow-sm sticky top-0 z-50">
            <nav class="container-custom py-4">
              <div class="flex items-center justify-between">
                <a href="/" class="flex items-center space-x-2">
                  <span class="text-2xl font-bold text-primary-600">MIGA</span>
                  <span class="text-sm text-dark-600 hidden sm:inline">Dienstleistungen GmbH</span>
                </a>
                
                <div class="hidden md:flex items-center space-x-8">
                  <a href="/" class="text-dark-700 hover:text-primary-600 transition-colors font-medium">Startseite</a>
                  <a href="/leistungen" class="text-dark-700 hover:text-primary-600 transition-colors font-medium">Leistungen</a>
                  <a href="/uber-uns" class="text-dark-700 hover:text-primary-600 transition-colors font-medium">Über uns</a>
                  <a href="/kontakt" class="btn-primary text-sm">Kontakt</a>
                </div>
                
                <!-- Mobile menu button -->
                <button id="mobile-menu-button" class="md:hidden p-2 text-dark-700 hover:text-primary-600">
                  <svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                  </svg>
                </button>
              </div>
              
              <!-- Mobile menu -->
              <div id="mobile-menu" class="hidden md:hidden mt-4 pb-4 space-y-3">
                <a href="/" class="block text-dark-700 hover:text-primary-600 transition-colors font-medium">Startseite</a>
                <a href="/leistungen" class="block text-dark-700 hover:text-primary-600 transition-colors font-medium">Leistungen</a>
                <a href="/uber-uns" class="block text-dark-700 hover:text-primary-600 transition-colors font-medium">Über uns</a>
                <a href="/kontakt" class="block text-dark-700 hover:text-primary-600 transition-colors font-medium">Kontakt</a>
              </div>
            </nav>
          </div>
        </slot>
      </header>
      
      <main class="flex-grow">
        <slot />
      </main>
      
      <footer class="bg-dark-900 text-white">
        <div class="container-custom py-12">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <h3 class="text-xl font-bold mb-4">MIGA Dienstleistungen GmbH</h3>
              <p class="text-dark-300 text-sm">
                Ihr zuverlässiger Allround-Dienstleister in Graz
              </p>
            </div>
            
            <div>
              <h4 class="font-semibold mb-4">Kontakt</h4>
              <ul class="space-y-2 text-sm text-dark-300">
                <li>Josef–Pock–Strasse 66</li>
                <li>8051 Graz</li>
                <li class="pt-2">
                  <a href="tel:+436642528150" class="hover:text-primary-400 transition-colors">
                    Mobil: 0664 25 28 150
                  </a>
                </li>
                <li>
                  <a href="mailto:miga2017@gmx.at" class="hover:text-primary-400 transition-colors">
                    miga2017@gmx.at
                  </a>
                </li>
              </ul>
            </div>
            
            <div>
              <h4 class="font-semibold mb-4">Rechtliches</h4>
              <ul class="space-y-2 text-sm text-dark-300">
                <li>
                  <a href="/impressum" class="hover:text-primary-400 transition-colors">Impressum</a>
                </li>
                <li>
                  <a href="/datenschutz" class="hover:text-primary-400 transition-colors">Datenschutz</a>
                </li>
              </ul>
            </div>
          </div>
          
          <div class="border-t border-dark-700 mt-8 pt-8 text-center text-sm text-dark-400">
            <p>&copy; {new Date().getFullYear()} MIGA Dienstleistungen GmbH. Alle Rechte vorbehalten.</p>
          </div>
        </div>
      </footer>
    </div>
    
    <script>
      // Mobile menu toggle
      const menuButton = document.getElementById('mobile-menu-button');
      const mobileMenu = document.getElementById('mobile-menu');
      
      menuButton?.addEventListener('click', () => {
        mobileMenu?.classList.toggle('hidden');
      });
    </script>
    
    <style is:global>
      @import '../styles/global.css';
    </style>
  </body>
</html>
