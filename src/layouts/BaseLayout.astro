---
const { title, description, image = '/images/og-image.jpg', headerBanner: pageBanner } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

import TopBanner from '../components/TopBanner.astro';
import Header from '../components/Header.astro';
import { getEntry } from 'astro:content';

// Fetch global settings
const siteSettings = await getEntry('settings', 'site');
if (!siteSettings) throw new Error('Site settings not found');
const { top_banner: globalBanner } = siteSettings.data as any;

// Determine which banner to show
// Priority: Page Banner > Global Banner > None
let activeBanner = null;

if (pageBanner && pageBanner.enabled) {
  // Use page-specific banner
  // Merge with global contact info to keep it consistent if not overridden
  activeBanner = {
    ...globalBanner, // Default contact info
    enabled: true,
    text: pageBanner.text || globalBanner.text,
    cta_label: pageBanner.cta_label || globalBanner.cta_label,
    cta_link: pageBanner.cta_link || globalBanner.cta_link,
    style_variant: pageBanner.variant || globalBanner.style_variant
  };
} else {
  // Fallback to global banner
  activeBanner = globalBanner;
}
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <div class="flex flex-col min-h-screen">
      {activeBanner && activeBanner.enabled && (
        <TopBanner 
          text={activeBanner.text}
          phone={activeBanner.phone}
          email={activeBanner.email}
          address_short={activeBanner.address_short}
          cta_label={activeBanner.cta_label}
          cta_link={activeBanner.cta_link}
          variant={activeBanner.style_variant}
          enabled={activeBanner.enabled}
        />
      )}
      
      <slot name="header">
        <Header />
      </slot>
      
      <main class="flex-grow">
        <slot />
      </main>
      
      <footer class="bg-dark-900 text-white">
        <div class="container-custom py-12">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <h3 class="text-xl font-bold mb-4">MIGA Dienstleistungen GmbH</h3>
              <p class="text-dark-300 text-sm">
