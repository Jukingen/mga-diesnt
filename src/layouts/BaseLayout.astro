---
interface Props {
  title: string;
  description: string;
  image?: string;
}

const { title, description, image = '/images/og-image.jpg' } = Astro.props;
const canonicalURL = new URL(Astro.url.pathname, Astro.site);

import TopBanner from '../components/TopBanner.astro';
import Header from '../components/Header.astro';
---

<!doctype html>
<html lang="de">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
    <meta name="generator" content={Astro.generator} />
    
    <!-- SEO -->
    <title>{title}</title>
    <meta name="description" content={description} />
    <link rel="canonical" href={canonicalURL} />
    
    <!-- Open Graph / Facebook -->
    <meta property="og:type" content="website" />
    <meta property="og:url" content={canonicalURL} />
    <meta property="og:title" content={title} />
    <meta property="og:description" content={description} />
    <meta property="og:image" content={new URL(image, Astro.site)} />
    
    <!-- Twitter -->
    <meta property="twitter:card" content="summary_large_image" />
    <meta property="twitter:url" content={canonicalURL} />
    <meta property="twitter:title" content={title} />
    <meta property="twitter:description" content={description} />
    <meta property="twitter:image" content={new URL(image, Astro.site)} />
    
    <!-- Fonts -->
    <link rel="preconnect" href="https://fonts.googleapis.com" />
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
  </head>
  <body>
    <div class="flex flex-col min-h-screen">
      <TopBanner />
      <slot name="header">
        <Header />
      </slot>
      
      <main class="flex-grow">
        <slot />
      </main>
      
      <footer class="bg-dark-900 text-white">
        <div class="container-custom py-12">
          <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
            <div>
              <h3 class="text-xl font-bold mb-4">MIGA Dienstleistungen GmbH</h3>
              <p class="text-dark-300 text-sm">
                Ihr zuverlässiger Allround-Dienstleister in Graz
              </p>
            </div>
            
            <div>
              <h4 class="font-semibold mb-4">Kontakt</h4>
              <ul class="space-y-2 text-sm text-dark-300">
                <li>Josef–Pock–Strasse 66</li>
                <li>8051 Graz</li>
                <li class="pt-2">
                  <a href="tel:+436642528150" class="hover:text-primary-400 transition-colors">
                    Mobil: 0664 25 28 150
                  </a>
                </li>
                <li>
                  <a href="mailto:miga2017@gmx.at" class="hover:text-primary-400 transition-colors">
                    miga2017@gmx.at
                  </a>
                </li>
              </ul>
            </div>
            
            <div>
              <h4 class="font-semibold mb-4">Rechtliches</h4>
              <ul class="space-y-2 text-sm text-dark-300">
                <li>
                  <a href="/impressum" class="hover:text-primary-400 transition-colors">Impressum</a>
                </li>
                <li>
                  <a href="/datenschutz" class="hover:text-primary-400 transition-colors">Datenschutz</a>
                </li>
              </ul>
            </div>
          </div>
          
          <div class="border-t border-dark-700 mt-8 pt-8 text-center text-sm text-dark-400">
            <p>&copy; {new Date().getFullYear()} MIGA Dienstleistungen GmbH. Alle Rechte vorbehalten.</p>
          </div>
        </div>
      </footer>
    </div>
    
    <style is:global>
      @import '../styles/global.css';
    </style>
  </body>
</html>
