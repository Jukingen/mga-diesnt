---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
---

<BaseLayout 
  title="Unsere Leistungen - MIGA Dienstleistungen GmbH"
  description="Professionelle Dienstleistungen: Reinigung, Grünflächenpflege, Winterdienst, Transport, Tischler-, Montage-, Bauarbeiten, Sanitär und KFZ-Service in Graz."
>
  <!-- Header -->
  <section class="bg-gradient-to-r from-primary-600 to-primary-700 text-white py-16">
    <div class="container-custom">
      <h1 class="heading-1 text-white mb-4">Unsere Leistungen</h1>
      <p class="text-xl text-primary-50">Professionelle Dienstleistungen für jeden Bedarf</p>
    </div>
  </section>

  <!-- Services -->
  <section class="section bg-white">
    <div class="container-custom">
      <!-- 1. Reinigung -->
      <div id="reinigung" class="mb-16 scroll-mt-20">
        <div class="card">
          <h2 class="heading-3 mb-6 text-primary-600">1. Reinigung</h2>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-dark-700">
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Stiegenhäuserreinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Bauendreinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Wohnungsreinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Fassadenreinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Fensterreinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Jalousiereinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Glasdachreinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Glasfassadereinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Grundreinigung verschiedener Böden</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Fliesenfugenreinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Dachziegelreinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Waschbetonplattenreinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Kleinküchereinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Großküchereinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Tiefgaragenreinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Tatortreinigung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Weitere Reinigungen auf Anfrage</li>
          </ul>
        </div>
      </div>

      <!-- 2. Grünflächenpflege -->
      <div id="gruenflaeche" class="mb-16 scroll-mt-20">
        <div class="card">
          <h2 class="heading-3 mb-6 text-accent-600">2. Grünflächenpflege</h2>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-dark-700">
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Rasenmähen</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Hochgrasmähen</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Heckenschneiden</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Laubrechen</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Bäume stutzen</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Bäume umschneiden</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Gartenarbeiten aller Art</li>
          </ul>
        </div>
      </div>

      <!-- 3. Winterdienst -->
      <div id="winter" class="mb-16 scroll-mt-20">
        <div class="card">
          <h2 class="heading-3 mb-6 text-primary-600">3. Winterdienst</h2>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-dark-700">
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Schneeräumung</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Streuen</li>
          </ul>
        </div>
      </div>

      <!-- 4. Transport -->
      <div id="transport" class="mb-16 scroll-mt-20">
        <div class="card">
          <h2 class="heading-3 mb-6 text-accent-600">4. Transport</h2>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-dark-700">
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Entsorgungen aller Art</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Entrümpelungen</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Übersiedlungen</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> KFZ-Überstellungen</li>
          </ul>
        </div>
      </div>

      <!-- 5. Tischlerarbeiten -->
      <div id="tischler" class="mb-16 scroll-mt-20">
        <div class="card">
          <h2 class="heading-3 mb-6 text-primary-600">5. Tischlerarbeiten</h2>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-dark-700">
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Parkettboden schleifen</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Sockelleisten ersetzen</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Bodenlegen (Fertigparkett, Laminat, Vinyl etc.)</li>
          </ul>
        </div>
      </div>

      <!-- 6. Montagearbeiten -->
      <div id="montage" class="mb-16 scroll-mt-20">
        <div class="card">
          <h2 class="heading-3 mb-6 text-accent-600">6. Montagearbeiten</h2>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-dark-700">
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Fenster- und Türmontage</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Beleuchtungsmontage</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Lichtschalter & Steckdosen</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Duschwandmontage</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Toilettenmontage</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Warmwasserboiler Montage</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Wasserhahn Montage</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Küchenblock Montage</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Möbelmontage</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> etc.</li>
          </ul>
        </div>
      </div>

      <!-- 7. Bauarbeiten -->
      <div id="bau" class="mb-16 scroll-mt-20">
        <div class="card">
          <h2 class="heading-3 mb-6 text-primary-600">7. Bauarbeiten</h2>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-dark-700">
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Spachteln</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Malen</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Grobputz</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Feinputz</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Gipswände</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Abbrucharbeiten</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> etc.</li>
          </ul>
        </div>
      </div>

      <!-- 8. Sanitärbereich -->
      <div id="sanitaer" class="mb-16 scroll-mt-20">
        <div class="card">
          <h2 class="heading-3 mb-6 text-accent-600">8. Sanitärbereich</h2>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-dark-700">
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Fliesenfugen erneuern</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Fliesen ersetzen (Kleinarbeiten)</li>
            <li class="flex items-start"><span class="text-accent-600 mr-2">•</span> Silikonfugen erneuern</li>
          </ul>
        </div>
      </div>

      <!-- 9. KFZ Fahrzeuge -->
      <div id="kfz" class="mb-16 scroll-mt-20">
        <div class="card">
          <h2 class="heading-3 mb-6 text-primary-600">9. KFZ Fahrzeuge</h2>
          <ul class="grid grid-cols-1 md:grid-cols-2 gap-3 text-dark-700">
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Autoreinigung innen & außen</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Autopolitur</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Reifenservice</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Fahrzeugdiagnose vor Ort</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Reparatur & Vorbereitung für §57a</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Schweißarbeiten</li>
            <li class="flex items-start"><span class="text-primary-600 mr-2">•</span> Fahrzeugabholung & Zustellung</li>
          </ul>
        </div>
      </div>
    </div>
  </section>

  <!-- CTA -->
  <section class="section bg-gradient-to-r from-primary-600 to-primary-700 text-white">
    <div class="container-custom text-center">
      <h2 class="heading-2 text-white mb-6">Interesse an unseren Leistungen?</h2>
      <p class="text-xl text-primary-50 mb-8">Kontaktieren Sie uns für ein unverbindliches Angebot</p>
      <Button href="/kontakt" variant="primary" size="lg" class="shadow-xl">Jetzt Kontakt aufnehmen</Button>
    </div>
  </section>
</BaseLayout>
