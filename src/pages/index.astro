---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
import { getEntry, getCollection } from 'astro:content';
const entry = await getEntry('pages', 'home');
if (!entry) throw new Error('Home entry not found');

const services = await getCollection('services');
const sortedServices = services.sort((a, b) => (a.data.order || 99) - (b.data.order || 99)).slice(0, 9); // Limit to top 9 or all
const { 
  title, 
  subtitle, 
  heroHeading, 
  heroText, 
  hero_background_image, 
  headerBanner,
  hero_buttons,
  about_section,
  services_section,
  cta_section
} = entry.data as any;

// Default image if none provided
const heroBg = hero_background_image || headerBanner?.image || '/images/hero-bg-placeholder.jpg';

// Fallbacks for new sections to prevent crashes if content not yet saved
const defaultHeroBtns = { primary_cta_label: "Jetzt Kontakt aufnehmen", primary_cta_link: "/kontakt", secondary_cta_label: "Unsere Leistungen", secondary_cta_link: "/leistungen" };
const finalHeroBtns = hero_buttons || defaultHeroBtns;

const defaultAbout = { heading: "Willkommen bei MIGA Dienstleistungen", content: "MIGA Dienstleistungen GmbH ist Ihr Allrounder-Team..." };
const finalAbout = about_section || defaultAbout;

const defaultServicesSec = { heading: "Unsere Leistungen", subheading: "Von Reinigung bis KFZ-Service – wir sind Ihr kompetenter Partner" };
const finalServicesSec = services_section || defaultServicesSec;

const defaultCTA = { heading: "Bereit für Ihr Projekt?", content: "Kontaktieren Sie uns noch heute...", primary_btn_label: "Kontakt aufnehmen", primary_btn_link: "/kontakt", secondary_btn_label: "0664 25 28 150", secondary_btn_link: "tel:+436642528150" };
const finalCTA = cta_section || defaultCTA;
---

<BaseLayout 
  title={title}
  description={subtitle || "Ihr Allround-Dienstleister in Graz"}
  headerBanner={headerBanner}
>
  <!-- Hero Section -->
  <section 
    class="relative bg-gradient-to-br from-primary-600 to-primary-800 text-white bg-cover bg-center"
    style={{ backgroundImage: `linear-gradient(rgba(0,0,0,0.5), rgba(0,0,0,0.5)), url('${heroBg}')` }}
  >
    <div class="absolute inset-0 bg-black/20"></div>
    <div class="container-custom relative py-24 md:py-32 lg:py-40">
      <div class="max-w-3xl">
        <h1 class="heading-1 text-white mb-6">
          {heroHeading}
        </h1>
        <p class="text-xl md:text-2xl text-primary-50 mb-8">
          {heroText}
        </p>
        <div class="flex flex-col sm:flex-row gap-4">
          <Button href={finalHeroBtns.primary_cta_link} variant="primary" size="lg" class="shadow-xl/20">
            {finalHeroBtns.primary_cta_label}
          </Button>
          <Button href={finalHeroBtns.secondary_cta_link} variant="secondary" size="lg" class="text-primary-700 border-white/50 hover:bg-white shadow-xl/10">
            {finalHeroBtns.secondary_cta_label}
          </Button>
        </div>
      </div>
    </div>
  </section>

  <!-- About Section -->
  <section class="section bg-white">
    <div class="container-custom">
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="heading-2 mb-6">{finalAbout.heading}</h2>
        <p class="text-lg text-dark-600 leading-relaxed">
          {finalAbout.content}
        </p>
      </div>
    </div>
  </section>

  <!-- Services Preview -->
  <section class="section bg-dark-50">
    <div class="container-custom">
      <div class="text-center mb-12">
        <h2 class="heading-2 mb-4">{finalServicesSec.heading}</h2>
        <p class="text-lg text-dark-600">{finalServicesSec.subheading}</p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {sortedServices.map((service, index) => {
          const image = service.data.banner?.image || (service.data as any).image;
          return (
            <div class="card group hover:scale-105">
              <div class="w-12 h-12 bg-primary-100 rounded-lg flex items-center justify-center mb-4 group-hover:bg-primary-600 transition-colors overflow-hidden">
                {image ? (
                  <img src={image} alt={service.data.title} class="w-full h-full object-cover" />
                ) : (
                   <svg class="w-6 h-6 text-primary-600 group-hover:text-white transition-colors" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                      <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19 21V5a2 2 0 00-2-2H7a2 2 0 00-2 2v16m14 0h2m-2 0h-5m-9 0H3m2 0h5M9 7h1m-1 4h1m4-4h1m-1 4h1m-5 10v-5a1 1 0 011-1h2a1 1 0 011 1v5m-4 0h4"></path>
                   </svg>
                )}
              </div>
              <h3 class="heading-4 mb-3">{service.data.title}</h3>
              <p class="text-dark-600 mb-4 line-clamp-3">
                {service.data.banner?.description || (service.data as any).description || service.data.description}
              </p>
              <a href={`/leistungen/${service.slug}`} class="text-primary-600 font-semibold hover:text-primary-700 inline-flex items-center">
                Mehr erfahren
                <svg class="w-4 h-4 ml-1" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 5l7 7-7 7"></path>
                </svg>
              </a>
            </div>
          );
        })}
      </div>
    </div>
  </section>

  <!-- CTA Section -->
  <section class="section bg-gradient-to-r from-primary-600 to-primary-700 text-white">
    <div class="container-custom text-center">
      <h2 class="heading-2 text-white mb-6">{finalCTA.heading}</h2>
      <p class="text-xl text-primary-50 mb-8 max-w-2xl mx-auto">
        {finalCTA.content}
      </p>
      <div class="flex flex-col sm:flex-row gap-4 justify-center">
        <Button href={finalCTA.primary_btn_link} variant="primary" size="lg" class="shadow-xl">
          {finalCTA.primary_btn_label}
        </Button>
        <Button href={finalCTA.secondary_btn_link} variant="secondary" size="lg" class="text-primary-700 border-transparent hover:bg-white shadow-xl">
          {finalCTA.secondary_btn_label}
        </Button>
      </div>
    </div>
  </section>
</BaseLayout>
