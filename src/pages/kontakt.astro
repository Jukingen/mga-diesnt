---
import BaseLayout from '../layouts/BaseLayout.astro';
import Button from '../components/Button.astro';
---

<BaseLayout 
  title="Kontakt - MIGA Dienstleistungen GmbH"
  description="Kontaktieren Sie MIGA Dienstleistungen GmbH in Graz. Telefon: 0664 25 28 150, E-Mail: miga2017@gmx.at"
>
  <section class="bg-gradient-to-r from-primary-600 to-primary-700 text-white py-16">
    <div class="container-custom">
      <h1 class="heading-1 text-white mb-4">Kontakt</h1>
      <p class="text-xl text-primary-50">Wir freuen uns auf Ihre Anfrage</p>
    </div>
  </section>

  <section class="section bg-white">
    <div class="container-custom">
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div>
          <h2 class="heading-3 mb-6">Kontaktformular</h2>
          <form name="contact" method="POST" data-netlify="true" netlify-honeypot="bot-field" class="space-y-6">
            <input type="hidden" name="form-name" value="contact" />
            <p class="hidden">
              <label>
                Don't fill this out if you're human: <input name="bot-field" />
              </label>
            </p>
            
            <div>
              <label for="name" class="block text-sm font-semibold text-dark-700 mb-2">
                Name *
              </label>
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full px-4 py-3 border border-dark-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                placeholder="Ihr Name"
              />
            </div>

            <div>
              <label for="email" class="block text-sm font-semibold text-dark-700 mb-2">
                E-Mail *
              </label>
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full px-4 py-3 border border-dark-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors"
                placeholder="ihre.email@beispiel.at"
              />
            </div>

            <div>
              <label for="message" class="block text-sm font-semibold text-dark-700 mb-2">
                Nachricht *
              </label>
              <textarea
                id="message"
                name="message"
                required
                rows="6"
                class="w-full px-4 py-3 border border-dark-300 rounded-lg focus:ring-2 focus:ring-primary-500 focus:border-primary-500 transition-colors resize-none"
                placeholder="Ihre Nachricht an uns..."
              ></textarea>
            </div>

            <Button type="submit" variant="primary" class="w-full shadow-md">
              Nachricht senden
            </Button>
          </form>
        </div>

        <!-- Contact Information -->
        <div>
          <h2 class="heading-3 mb-6">Kontaktinformationen</h2>
          
          <div class="space-y-6">
            <div class="card">
              <h3 class="font-semibold text-lg mb-3 flex items-center text-primary-600">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
                </svg>
                Adresse
              </h3>
              <p class="text-dark-700">
                Josef–Pock–Strasse 66<br />
                8051 Graz
              </p>
            </div>

            <div class="card">
              <h3 class="font-semibold text-lg mb-3 flex items-center text-primary-600">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
                </svg>
                Telefon
              </h3>
              <p class="text-dark-700">
                <a href="tel:+436642528150" class="hover:text-primary-600 transition-colors">
                  Mobil: 0664 25 28 150
                </a>
              </p>
            </div>

            <div class="card">
              <h3 class="font-semibold text-lg mb-3 flex items-center text-primary-600">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                E-Mail
              </h3>
              <p class="text-dark-700">
                <a href="mailto:miga2017@gmx.at" class="hover:text-primary-600 transition-colors">
                  miga2017@gmx.at
                </a>
              </p>
            </div>

            <div class="card">
              <h3 class="font-semibold text-lg mb-3 flex items-center text-primary-600">
                <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                  <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 13.255A23.931 23.931 0 0112 15c-3.183 0-6.22-.62-9-1.745M16 6V4a2 2 0 00-2-2h-4a2 2 0 00-2 2v2m4 6h.01M5 20h14a2 2 0 002-2V8a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
                </svg>
                Geschäftsführer
              </h3>
              <p class="text-dark-700">
                Miodrag Jovanovic<br />
                <span class="text-sm text-dark-600">Denkmal-, Fassaden- und Gebäudereinigungsmeister</span>
              </p>
            </div>
          </div>
        </div>
      </div>

      <!-- Map -->
      <div class="mt-12">
        <h2 class="heading-3 mb-6 text-center">Standort</h2>
        <div class="rounded-xl overflow-hidden shadow-lg h-96">
          <iframe
            width="100%"
            height="100%"
            frameborder="0"
            scrolling="no"
            marginheight="0"
            marginwidth="0"
            src="https://www.openstreetmap.org/export/embed.html?bbox=15.3973%2C47.0858%2C15.4173%2C47.0958&layer=mapnik&marker=47.0908%2C15.4073"
            style="border: 0"
            title="MIGA Dienstleistungen GmbH Standort"
          ></iframe>
        </div>
        <p class="text-center mt-4 text-sm text-dark-600">
          <a 
            href="https://www.openstreetmap.org/?mlat=47.0908&mlon=15.4073#map=15/47.0908/15.4073" 
            target="_blank" 
            rel="noopener noreferrer"
            class="text-primary-600 hover:text-primary-700 transition-colors"
          >
            Größere Karte anzeigen
          </a>
        </p>
      </div>
    </div>
  </section>
</BaseLayout>
