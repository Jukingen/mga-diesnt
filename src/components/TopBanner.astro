---
interface Props {
  text: string;
  phone: string;
  email: string;
  address_short: string;
  cta_label: string;
  cta_link: string;
  variant: 'dark' | 'light';
  enabled: boolean;
}

const { 
  text,
  phone,
  email,
  address_short,
  cta_label,
  cta_link,
  variant = 'dark',
  enabled
} = Astro.props;

if (!enabled) {
  return;
}
---

<div class={`w-full py-2.5 text-sm z-50 relative ${variant === 'dark' ? 'bg-dark-900 text-white' : 'bg-gray-100 text-dark-900 border-b border-gray-200'}`}>
  <div class="container-custom flex flex-col md:flex-row justify-between items-center gap-2 md:gap-4">
    <div class="font-medium text-center md:text-left tracking-wide">
      {text}
    </div>
    
    <div class="flex flex-wrap justify-center md:justify-end gap-x-6 gap-y-2 text-xs md:text-sm items-center">
      {address_short && (
        <span class="hidden lg:flex items-center gap-1.5 opacity-90">
             <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-map-pin"><path d="M20 10c0 6-8 12-8 12s-8-6-8-12a8 8 0 0 1 16 0Z"/><circle cx="12" cy="10" r="3"/></svg>
            {address_short}
        </span>
      )}

      {phone && (
        <a href={`tel:${phone.replace(/\s/g, '')}`} class="hover:text-primary-400 transition-colors flex items-center gap-1.5 font-medium">
          <span class="sr-only">Telefon</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-phone"><path d="M22 16.92v3a2 2 0 0 1-2.18 2 19.79 19.79 0 0 1-8.63-3.07 19.5 19.5 0 0 1-6-6 19.79 19.79 0 0 1-3.07-8.67A2 2 0 0 1 4.11 2h3a2 2 0 0 1 2 1.72 12.84 12.84 0 0 0 .7 2.81 2 2 0 0 1-.45 2.11L8.09 9.91a16 16 0 0 0 6 6l1.27-1.27a2 2 0 0 1 2.11-.45 12.84 12.84 0 0 0 2.81.7A2 2 0 0 1 22 16.92z"/></svg>
          {phone}
        </a>
      )}
      
      {email && (
        <a href={`mailto:${email}`} class="hover:text-primary-400 transition-colors flex items-center gap-1.5 font-medium">
          <span class="sr-only">Email</span>
          <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="lucide lucide-mail"><rect width="20" height="16" x="2" y="4" rx="2"/><path d="m22 7-8.97 5.7a1.94 1.94 0 0 1-2.06 0L2 7"/></svg>
          {email}
        </a>
      )}

      {phone && email && <span class="hidden md:inline text-gray-500 opacity-50">|</span>}

      {cta_label && cta_link && (
        <a href={cta_link} class="text-primary-400 hover:text-white transition-colors font-bold flex items-center gap-1">
          {cta_label} <span aria-hidden="true">&rarr;</span>
        </a>
      )}
    </div>
  </div>
</div>
